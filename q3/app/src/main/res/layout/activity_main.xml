<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/principal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Current Principal "
        android:background="#463482"
        android:textColor="#FF0000"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:textColorHint="#FF0000"
        android:padding="5dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/a_addition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Annual Addition"
        android:textColor="#FF0000"
        android:background="#463482"
        android:textSize="25dp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="50dp"
        android:textColorHint="#FF0000"
        android:padding="5dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:hint="Number of Years"
        android:background="#463482"
        android:textSize="25dp"
        android:layout_marginTop="175dp"
        android:layout_marginStart="50dp"
        android:textColorHint="#FF0000"
        android:padding="5dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/investment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Investment Rate"
        android:textColor="#FF0000"
        android:background="#463482"
        android:textSize="25dp"
        android:layout_marginTop="240dp"
        android:layout_marginStart="50dp"
        android:textColorHint="#FF0000"
        android:padding="5dp"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/output"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:hint="Final Amount"
        android:padding="10dp"
        android:gravity="center"
        android:outlineAmbientShadowColor="@color/grey"
        android:textColorHint="@color/grey"
        android:background="#463482"
        android:textColor="#FF0000"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        />


    <Button
        android:id="@+id/button"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="Compute"
        android:textSize="20dp"
        android:onClick="calculate"
        />









</RelativeLayout>