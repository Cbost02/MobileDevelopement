<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warm_pink"
    tools:context=".MainActivity">


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/the_table">

        <!-- Start of the row -->
        <TableRow
            android:layout_marginTop="10dp">

            <!-- Assignment Text Field -->
            <TextView
                style="@style/label_background"
                android:id="@+id/assignment_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/margin_start"
                android:text="Assignment:" />

            <EditText
                style="@style/text_field_background"
                android:id="@+id/assignment_input"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:padding="8dp"
                android:textSize="@dimen/text_size"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <!-- Midterm Text Field -->
            <TextView
                style="@style/label_background"
                android:id="@+id/midterm_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/margin_start"
                android:text="Midterm:" />

            <EditText
                style="@style/text_field_background"
                android:id="@+id/midterm_input"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:padding="8dp"
                android:textSize="@dimen/text_size"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <!-- Final Exam Text Field -->
            <TextView
                style="@style/label_background"
                android:id="@+id/final_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/margin_start"
                android:text="Final Exam:" />

            <EditText
                style="@style/text_field_background"
                android:id="@+id/final_input"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:padding="8dp"
                android:textSize="@dimen/text_size"
                android:textColor="#FFFFFF" />
        </TableRow>

        <TableRow
            android:layout_marginTop="40dp">

            <!-- Final Score Text Field -->
            <TextView
                style="@style/label_background"
                android:id="@+id/score_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/margin_start"
                android:text="Final Score:" />

            <TextView
                style="@style/text_field_background"
                android:id="@+id/score_output"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:padding="8dp"
                android:gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <!-- Letter Grade Text Field -->
            <TextView
                style="@style/label_background"
                android:id="@+id/letter_label"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/margin_start"
                android:text="Letter Grade:" />

            <TextView
                style="@style/text_field_background"
                android:id="@+id/letter_output"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:padding="8dp"
                android:textSize="@dimen/text_size"
                android:textColor="#FFFFFF"
                android:textAlignment="center"/>
        </TableRow>
    </TableLayout>


    <!-- Calculate Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:textSize="20dp"
        android:padding="40dp"
        android:backgroundTint="@color/green"
        android:text="Calculate" />

</RelativeLayout>